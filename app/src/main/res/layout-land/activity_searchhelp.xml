<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.amjadmajed.uetmappy.SearchHelpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchHelpTextView1"
        android:id="@+id/searchhelpTextView1"
        android:gravity="left"
        android:fontFamily="@string/fontFamily__roboto_black"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchHelpTextView2"
        android:id="@+id/searchhelpTextView2"
        android:gravity="left"
        android:fontFamily="@string/fontFamily__roboto_black"
        android:paddingTop="8dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/searchhelpTextView1"
        android:layout_alignLeft="@+id/searchhelpTextView1"
        android:layout_alignStart="@+id/searchhelpTextView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchHelpTextView3"
        android:id="@+id/searchhelpTextView3"
        android:gravity="left"
        android:fontFamily="@string/fontFamily__roboto_black"
        android:paddingTop="8dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/searchhelpTextView2"
        android:layout_alignLeft="@+id/searchhelpTextView4"
        android:layout_alignStart="@+id/searchhelpTextView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchHelpTextView4"
        android:id="@+id/searchhelpTextView4"
        android:gravity="left"
        android:fontFamily="@string/fontFamily__roboto_black"
        android:paddingTop="8dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/searchhelpTextView3"
        android:layout_alignLeft="@+id/searchhelpTextView5"
        android:layout_alignStart="@+id/searchhelpTextView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchHelpTextView5"
        android:id="@+id/searchhelpTextView5"
        android:gravity="left"
        android:fontFamily="@string/fontFamily__roboto_black"
        android:paddingTop="20dp"
        android:paddingLeft="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/searchhelpTextView2"
        android:layout_alignStart="@+id/searchhelpTextView2" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goSearchHelpButton1"
        android:text="@string/searchHelpButton1"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:fontFamily="@string/fontFamily__roboto_black"
        android:textSize="12dp"
        android:layout_alignTop="@+id/searchhelpTextView1"
        android:layout_alignRight="@+id/searchhelpTextView5"
        android:layout_alignEnd="@+id/searchhelpTextView5" />

</RelativeLayout>
